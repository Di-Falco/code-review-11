@{
  Layout = "_Layout";
}

@using Pierre.Models;
@model IEnumerable<Pierre.Models.Flavor>

<h1>Flavors for @User.Identity.Name</h1>

@if (@Model.Any())
{
  <ul>
    @foreach(Flavor flavor in Model)
    {
      <li><a href='@Url.Action("Details", new { id = flavor.FlavorId })'><button class='btn btn-default'>flavor.Name</button></a></li>
    }
  </ul>
}
else
{
  <h3>No flavors have been added yet!</h3>
}

