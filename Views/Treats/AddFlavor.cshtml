@{
  Layout = "_Layout";
}

@model Pierre.Models.Treat

<h2>Add a flavor</h2>

<h4>Add a flavor to this treat: @Html.DisplayFor(model => model.Description)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  @Html.Label("Select flavor")
  @Html.DropDownList("FlavorId", (IEnumerable<SelectListItem>)ViewData["Menu"],"-- Select Flavor --")

  <button type="submit">Save</button>
}